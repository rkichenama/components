{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "lib": ["es2018", "dom"],
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./types"
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "./**/*.test.*",
    "./node_modules/**/*",
    "./lib/**/*",
    "./dist/**/*",
    "./docs/**/*",
    "library.d.ts",
    "library.ts"
  ]
}