{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "lib": ["es2018", "dom"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules/**/*",
    "./lib/**/*",
    "./dist/**/*",
    "./docs/**/*"
  ]
}